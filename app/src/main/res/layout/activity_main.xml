<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <!--        Katalog Product-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <!--            Product Pertama-->
            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:backgroundTint="@color/brown"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="15dp">
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="@drawable/product">
                        </ImageView>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="Kopi Sehat"
                            android:textColor="@color/second"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"
                            android:text="Price : Rp. 50.000"
                            android:textColor="@color/second"
                            android:textSize="14sp"/>

                        <Button
                            android:id="@+id/btnSehat"
                            android:layout_width="100dp"
                            android:layout_height="35dp"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/second"
                            android:textColor="@color/black"
                            android:layout_marginTop="60dp"
                            android:text="Buy It"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--Product kedua-->
            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/brown"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="15dp">
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="@drawable/product">
                        </ImageView>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="Kopi Joss"
                            android:textColor="@color/second"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"
                            android:text="Price : Rp. 20.000"
                            android:textColor="@color/second"
                            android:textSize="14sp"/>

                        <Button
                            android:id="@+id/btnJoss"
                            android:layout_width="100dp"
                            android:layout_height="35dp"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/second"
                            android:textColor="@color/black"
                            android:layout_marginTop="60dp"
                            android:text="Buy It"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--            Product ketiga-->
            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:backgroundTint="@color/brown"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="15dp">
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="@drawable/product">
                        </ImageView>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="Kopi Damai"
                            android:textColor="@color/second"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"
                            android:text="Price : Rp. 10.000"
                            android:textColor="@color/second"
                            android:textSize="14sp"/>

                        <Button
                            android:id="@+id/btnDamai"
                            android:layout_width="100dp"
                            android:layout_height="35dp"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/second"
                            android:textColor="@color/black"
                            android:layout_marginTop="60dp"
                            android:text="Buy It"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

<!--                Product keempat-->
                <androidx.cardview.widget.CardView
                    android:layout_width="380dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/brown"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="15dp">
                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:background="@drawable/product">
                            </ImageView>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:text="Kopi Itam"
                                android:textColor="@color/second"
                                android:textSize="20sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:textStyle="bold"
                                android:text="Price : Rp. 9.000"
                                android:textColor="@color/second"
                                android:textSize="14sp"/>

                            <Button
                                android:id="@+id/btnItam"
                                android:layout_width="100dp"
                                android:layout_height="35dp"
                                android:textSize="12sp"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/second"
                                android:textColor="@color/black"
                                android:layout_marginTop="60dp"
                                android:text="Buy It"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>